#!/usr/bin/env bash

noPara1()  { gawk '
  BEGIN {RS=""; FS="\n"}
  NR==1 { next }
        { print($0 "\n")  }' 
}

classify() { gawk '
  /^--\[\[/,/--\]\]/ { print "DOC " $0; next }
  /^-- /             { print "DOC " $0; next;}
                     { print "CODE "$0}' 
}

apply() { gawk '
      { now=$1
        gsub(/(DOC |CODE )/,"");
        apply(now,b4,last) 
        last=$0
        b4=now} 
END   { apply(now,b4,last)
        if (now=="CODE") print "```" }

function apply(now,b4,last) {
  gsub(/^(-- |--\[\[[ \t]*|--\]\])/,"",last)
  if  (now==b4)  
     print(last)
  else {
   if (last !~ /^[ \t]*$/) last=last "\n"
   if (now=="CODE") {printf(last); print"\n```lua"}
   if (now=="DOC")  {printf(last);  print"```\n" }}}' 
}

cat<<EOF
---
Title: $1
---

EOF
cat $1 | noPara1 | classify  | apply
